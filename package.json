{
  "name": "vue3",
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:preview": "vite preview --port 8001",
    "code-style": "npm run code-style:lint && npm run code-style:format && npm run code-style:scss",
    "code-style:lint": "npx eslint --ext .js,.vue --ignore-path .gitignore --fix src",
    "code-style:format": "npx prettier --write 'src/**/*.js' 'src/**/*.vue' 'test/**/*.js'",
    "code-style:scss": "npx stylelint 'src/assets/scss/**/*.scss'",
    "test": "npm run test:unit",
    "test:unit": "npx jest",
    "test:coverage": "npx jest --coverage",
    "test:coverage:preview": "npm run test:coverage && npx http-server coverage/lcov-report/ -p 8002"
  },
  "dependencies": {
    "vue": "^3.2.31",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@vitejs/plugin-vue": "^2.2.2",
    "@vue/compiler-sfc": "^3.0.4",
    "@vue/vue3-jest": "^27.0.0-alpha.4",
    "autoprefixer": "^10.4.2",
    "babel-jest": "^27.5.1",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.4.1",
    "http-server": "^14.1.0",
    "jest": "^27.5.1",
    "postcss": "^8.4.6",
    "postcss-import": "^14.0.2",
    "prettier": "2.5.1",
    "sass": "^1.49.8",
    "stylelint": "^14.5.1",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-recommended-scss": "^5.0.2",
    "stylelint-config-standard-scss": "^3.0.0",
    "tailwindcss": "^3.0.23",
    "vite": "^2.8.4"
  }
}
